<html>
    <head>
        <title>Hair Salon</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>{{ stylist.getName }}</h1>

            <form action="/update_stylist" method="post">
              <input name="_method" type="hidden" value="patch">
              <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId }}">
              <h4>Enter updated information about the stylist</h4>
              <div class="form-group">
                  <label for="name">Stylist Name</label>
                  <input id="name" name="name" class="form-control" type="text" placeholder="Name" value="{{ stylist.getName }}" required>
              </div>

              <button type="submit" class="btn btn-success">Submit</button>
            </form>

            <form action="/stylists/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit" class="btn btn-danger">Delete this stylist</button>
            </form>
        </div>
    </body>
</html>
