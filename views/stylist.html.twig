<html>
    <head>
        <title>Hair Salon</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>{{ stylist.getName }}</h1>

            {% if clients is not empty %}
                <h4>List of clients:</h4>
                    {% for client in clients %}
                        <li><h5><strong><a href="/clients/{{ client.getId }}">{{ client.getName }}</a></strong></h5></li>
                    {% endfor %}
            {% else %}
                <h3>There are no clients for {{ stylist.getName }} yet!</h3>
            {% endif %}

            <form action="/show_client_form">
                <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId }}">
                <button type="submit" class="btn btn-info">Add new client</button>
            </form>

            <form action="/stylist_update_form">
                <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId }}">
                <button type="submit" class="btn btn-warning">Edit stylist information</button>
            </form>

            {% if form_check == true %}
                <form action="/add_client" method="post">
                    <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId }}">
                    <h4>Enter information about the client</h4>
                    <div class="form-group">
                        <label for="name">Client Name</label>
                        <input id="name" name="name" class="form-control" type="text" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Client Phone Number</label>
                        <input id="phone" name="phone" class="form-control" type="text" placeholder="Phone Number" required>
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            {% endif %}
            
            <form action="/">
                <button type="submit" class="btn btn-primary">Home</button>
            </form>
        </div>
    </body>
</html>
